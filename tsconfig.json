{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "index.ts",
    "components/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}